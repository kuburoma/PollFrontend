<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{login.login}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/create-group.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{login.login}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>register</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/create-group.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{manageGroup.createGroup}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/supervised-groups.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/supervised-groups.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{groupView.updateSelectedGroup(group)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/group-voters.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{groupView.deleteVoterGroup(group)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/supervised-groups.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{groupView.createNewPoll(group)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/new-poll.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/unregister-group.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{groupView.unregisterFromGroup(group)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/unregister-group.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/register-group.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{groupView.registerIntoGroup(group)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/register-group.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/new-poll.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{newPoll.createPoll}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/supervised-groups.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/voted-polls.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{pollView.results(poll)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/vote-chart.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/supervised-polls.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{pollView.results(poll)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/vote-chart.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{pollView.deletePoll(poll)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/supervised-polls.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/unvoted-polls.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{pollView.vote(poll)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/vote-in-poll.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/group-voters.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{groupVotersView.removeUser(voter.id)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/group-voters.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{manageGroup.updateGroup}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/group-voters.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>


    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>createGroup</from-outcome>
            <to-view-id>/create-group.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>supervisedGroups</from-outcome>
            <to-view-id>/supervised-groups.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>registerGroups</from-outcome>
            <to-view-id>/register-group.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>unregisterGroups</from-outcome>
            <to-view-id>/unregister-group.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>vote</from-outcome>
            <to-view-id>/unvoted-polls.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>voted</from-outcome>
            <to-view-id>/voted-polls.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>supervised</from-outcome>
            <to-view-id>/supervised-polls.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>


</faces-config>